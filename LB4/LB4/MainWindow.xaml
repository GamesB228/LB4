<Window x:Class="LB4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LB4"
        mc:Ignorable="d"
        Title="Будівельні матеріали"
        Height="350" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- ===== ЦЕМЕНТ ===== -->
        <GroupBox Header="Цемент" Margin="5">
            <StackPanel>
                <TextBlock Text="Ціна за мішок"/>
                <TextBox x:Name="CementPrice"/>

                <TextBlock Text="Кількість"/>
                <TextBox x:Name="CementQuantity"/>

                <TextBlock Text="Вага мішка (кг)"/>
                <TextBox x:Name="CementWeight"/>

                <TextBlock x:Name="CementResult"
                           FontWeight="Bold"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- ===== ДЕРЕВО ===== -->
        <GroupBox Header="Дерево" Grid.Column="1" Margin="5">
            <StackPanel>
                <TextBlock Text="Ціна за одиницю"/>
                <TextBox x:Name="WoodPrice"/>

                <TextBlock Text="Кількість"/>
                <TextBox x:Name="WoodQuantity"/>

                <TextBlock Text="Тип обробки"/>
                <ComboBox x:Name="WoodTreatment">
                    <ComboBoxItem Content="Без обробки"/>
                    <ComboBoxItem Content="Лакування"/>
                </ComboBox>

                <TextBlock x:Name="WoodResult"
                           FontWeight="Bold"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- ===== КНОПКА ===== -->
        <Button Content="Обчислити"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                Height="45"
                Click="Calculate_Click" Margin="0,0,0,45"/>

        <!-- ===== РЕЗУЛЬТАТ ===== -->
        <TextBlock x:Name="TotalResult"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Bottom"
                   Margin="0,50,0,0"
                   FontSize="16"
                   FontWeight="Bold"
                   TextAlignment="Center"/>
    </Grid>
</Window>